{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DevConnectionString": "Server=DESKTOP-OBG81FC\\SQLEXPRESS;Database=GitProjects;Trusted_Connection=True;"
  },
  "Serilog": {
    "Enrich": [ "FromLogContext" ],
    "Filter": null,
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "Using": [ "Serilog.Sinks.MSSqlServer", "Serilog.Settings.Configuration" ],
    "WriteTo": [
      {
        "Args": {
          "autoCreateSqlTable": true,
          "columnOptionsSection": {
            "customColumns": [
              //{
              //  "AllowNull": true,
              //  "ColumnName": "UserId",
              //  "DataLength": 100,
              //  "DataType": "varchar"
              //},
              {
                "AllowNull": true,
                "ColumnName": "API",
                "DataLength": 20,
                "DataType": "varchar"
              },
              {
                "AllowNull": true,
                "ColumnName": "Method",
                "DataLength": 30,
                "DataType": "varchar"
              },
              {
                "AllowNull": true,
                "ColumnName": "CorrelationID",
                "DataLength": 50,
                "DataType": "varchar"
              }
            ],
            "removeStandardColumns": [ "MessageTemplate", "Properties" ] //remove the Properties column in the standard ones
          },
          "serilogconnectionString": "Server=DESKTOP-OBG81FC\\SQLEXPRESS;Database=GitProjects;Trusted_Connection=True;",
          "schemaName": "Core",
          "tableName": "DynamicSPLog",
          "rollingInterval": "Month"
        },
        "Name": "MSSqlServer"
      }
    ]
  }
}
